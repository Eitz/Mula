#Options
GenerateScanner = true
GenerateParser = true
Language = Java
ScannerName = Lexico
ParserName = Sintatico
SemanticName = Semantico
ScannerCaseSensitive = true
ScannerTable = Full
Input = String
Parser = SLR
#RegularDefinitions
ignorar: [\ \n\t\r\s]+
ponto_e_virgula: ;
virgula: ,
palavra_reservada: (out)
RUN: (run)
tipo_variavel: int|string
nome_variavel: [a-zA-Z][a-zA-Z0-9_]*
string: \"[^\"]*\" |'[^']*'
inteiro: [0-9]+
seta_leitura: <\-
seta_escrita: \->
igual: =
mult: \*
div: /
soma: \+
sub: \-
abre_p: \(
fecha_p: \)
abre_c: \{
fecha_c: \}
dois_p: :
codigo: <%[^%>]*[^>]*%>

#Tokens
:{ignorar}
VIRGULA: {virgula}
PONTO_E_VIRGULA:{ponto_e_virgula}
PALAVRA_RESERVADA: {palavra_reservada}
RUN: {RUN}
TIPO_VARIAVEL:{tipo_variavel}
NOME_VARIAVEL:{nome_variavel}
STRING:{string}
INTEIRO:{inteiro}
SETA_LEITURA:{seta_leitura}
SETA_ESCRITA:{seta_escrita}
IGUAL:{igual}
SOMA: {soma}
SUB: {sub}
MULT: {mult}
DIV: {div}
AP: {abre_p}
FP: {fecha_p}
VIRG: {virgula}
AC: {abre_c}
FC: {fecha_c}
CODIGO: {codigo}
DP: {dois_p}
#NonTerminals
<TUDO>
<LINHA>
<DECLARACAO_VARIAVEL>
<LEITURA_ARQUIVO>
<ESCRITA_ARQUIVO>
<ATRIBUICAO>
<EXPRESSAO>
<B>
<C>
<D>
<EXECUCAO>
<RUN>
#Grammar
<TUDO> ::= <LINHA> PONTO_E_VIRGULA <TUDO> | <LINHA> PONTO_E_VIRGULA;
<LINHA> ::= <DECLARACAO_VARIAVEL> <LEITURA_ARQUIVO> | <DECLARACAO_VARIAVEL> <ATRIBUICAO> | RUN <RUN> | <ESCRITA_ARQUIVO> | <EXECUCAO>;
<DECLARACAO_VARIAVEL> ::= TIPO_VARIAVEL NOME_VARIAVEL | NOME_VARIAVEL;
<LEITURA_ARQUIVO> ::= SETA_LEITURA <EXPRESSAO>;
<ESCRITA_ARQUIVO> ::= <EXPRESSAO> SETA_ESCRITA <EXPRESSAO>;
<ATRIBUICAO> ::= IGUAL <EXPRESSAO> | IGUAL RUN <RUN> | <EXECUCAO>;
<EXPRESSAO> ::= <EXPRESSAO> SOMA <EXPRESSAO> #3 | <EXPRESSAO> SUB #4 <B> | <B>;
<B> ::= <B> MULT  <C> #5 | <B> DIV <C> #6 | <C>;
<C> ::= SUB <C> | <D>;
<D> ::= AP <EXPRESSAO> FP | STRING #2 | INTEIRO #1 | NOME_VARIAVEL;
<EXECUCAO> ::= PALAVRA_RESERVADA <EXPRESSAO>;
<RUN> ::= <EXPRESSAO> VIRGULA CODIGO ;
